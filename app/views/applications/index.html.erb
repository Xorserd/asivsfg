<h1>Applications</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dob</th>
      <th>Country</th>
      <th>Email</th>
      <th>Homeaddress</th>
      <th>Gender</th>
      <th>Arrival date</th>
      <th>Destination</th>
      <th>Passport number</th>
      <th>Passport issued</th>
      <th>Passport expire</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.name %></td>
        <td><%= application.dob %></td>
        <td><%= application.country %></td>
        <td><%= application.email %></td>
        <td><%= application.homeaddress %></td>
        <td><%= application.gender %></td>
        <td><%= application.arrival_date %></td>
        <td><%= application.destination %></td>
        <td><%= application.passport_number %></td>
        <td><%= application.passport_issued %></td>
        <td><%= application.passport_expire %></td>
        <td><%= application.price %></td>
        <td><%= link_to 'Show', application %></td>
        <td><%= link_to 'Edit', edit_application_path(application) %></td>
        <td><%= link_to 'Destroy', application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

